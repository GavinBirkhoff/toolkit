{
  "name": "path-copilot",
  "version": "1.0.0-Beta",
  "description": "A rich and colorful toolkit about Path.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "esm/index.js",
  "exports": "./lib/index.js",
  "files": [
    "esm",
    "lib",
    "README.md"
  ],
  "scripts": {
    "build": "npm run clean && npm run script:gen-index && run-p build:*",
    "build:esm": "tsc -p tsconfig.json --target ES5 --module ESNext --outDir esm",
    "build:cjs": "tsc -p tsconfig.json --target ES5 --module commonjs --outDir lib",
    "clean": "rm -rf lib && rm -rf esm",
    "tsc": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "script:gen-index": "node ./scripts/generate-index.js",
    "docs": "npm run build:esm && jsdoc -c jsdoc.json",
    "doc": "typedoc --tsconfig ./tsconfig.json",
    "update:readme": "npm run doc && node ./scripts/update-docs.js",
    "pub": "npm run test && npm run build && npm run update:readme && npm publish"
  },
  "keywords": [
    "path",
    "domkit",
    "jsdom",
    "util",
    "path-util",
    "toolkit",
    "tool"
  ],
  "author": "Gavin Birkhoff <gavinbirkhoff@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GavinBirkhoff/toolkit/issues"
  },
  "homepage": "https://github.com/GavinBirkhoff/toolkit#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GavinBirkhoff/toolkit.git"
  },
  "dependencies": {
    "ts-copilot": "^1.0.0-Beta"
  },
  "devDependencies": {
    "docdash": "^1.2.0"
  }
}
